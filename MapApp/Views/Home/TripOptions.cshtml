@{
    ViewData["Title"] = "Trip options";
}

<link href="~/css/tripOrder.css" rel="stylesheet">
<link href="~/css/tripOptions.css" rel="stylesheet">


<div class="UndeHeader">

        <div class="UnderHeaderContent">

            <div class="UnderHeaderContentCurrent"> Additional baggage</div>
            <div><img src="~/images/RightArrow.png" alt="" class="UnderHeaderContentArrows"></div>
            <div>Passenger details</div>
            <div><img src="~/images/RightArrow.png" alt="" class="UnderHeaderContentArrows"></div>
            <div>Review and pay</div> 
        </div> 
    </div> 
    <div class="MainContent">
        <div class="Info">
            <div class="Content SeatForm">
                    <div class="ContentHeader">
                        <div class="ContentHeaderText">Seat selection</div>
                       
                    </div>
                    <div class="SeatSelector">
                        <span class="dropdown-el">
                            @foreach (var seat in ViewBag.FreeSeats)
                            {
                                <input type="radio" name="SeatsNumbers" value='@("Seat number " + seat)' id=@seat ><label for=@seat  onclick="updateLocalStorageSeatNumber(@seat)">@("Seat number " + seat)</label>
                            }
                           
                            
                        </span>
                    </div>             
                </div>
            <div class="Content">
                <div class="ContentHeader">
                    <div class="ContentHeaderText">Additional baggage</div>
                </div>
                <div class="Baggage">
                    <form class="AdditionalBaggageForm" action="">
                        
                        @foreach(var service in ViewBag.Services)
                        {

                            
                            <div class="AdditionalBaggageFormItem">
                                <label class="AdditionalBaggageFormItemLabel" for='@service.Name'>@service.Name</label>
                                <input name ='@service.Name'  type="checkbox" class="switch_1 AdditionalBaggageFormItemCheckBox" onclick="updateLocalStorageServices(this,@service.Id,'@service.Name',@service.Price)">
                            </div>
                           
                        }
                       
                    </form>
                </div>
                
            </div>
            <form action="/Home/PassengerDetails">
                <div class="ToNextStage">
                <button class="ToNextStageButton">Go to passenger details</button>
                </div>
            </form>
            
        </div>
       
        <div class="CheckSum">
            <div class="RoutesInfo">
                <div class="RouteOutbandInfo">
                    <div class="RouteInfoContent">
                        <div class="RouteInfoHeader">
                            <i class="fa-solid fa-circle-check"></i>
                            <div>Outbount</div>
                        </div>
                        <div class="RouteInfoMain">
                            <div id="RouteInfoMainDateOut" class="RouteInfoMainDate">Thu, May 19 10:00 AM – 1:15 PM</div>
                            <div class="RouteInfoMainContent">
                                <div id="RouteInfoMainContentStationOut1" class="RouteInfoMainContentStation">London Gatwick Station</div>
                                <span> — </span>
                                <div id="RouteInfoMainContentStationOut2" class="RouteInfoMainContentStation">Florence Peretola Station</div>
                            </div>
                        </div>
                        <div id="RouteInfoTimeOut" class="RouteInfoTime">
                            <div>2h15m • 0 transfers</div>
                        </div>
                    </div>
                    <div class="RouteInfoDropDown">
                        <i class="fa-solid fa-angle-down"></i>
                        
                    </div>
                </div>
                @if (ViewBag.ReturnalDate != null)
                {
                    <div class="RouteReturnInfo">
                    <div class="RouteInfoContent">
                        <div class="RouteInfoHeader">
                            <i class="fa-solid fa-circle-check"></i>
                            <div>Return</div>
                        </div>
                        <div class="RouteInfoMain">
                            <div class="RouteInfoMainDate">Thu, May 19 10:00 AM – 1:15 PM</div>
                            <div class="RouteInfoMainContent">
                                <div class="RouteInfoMainContentStation">London Gatwick Station</div>
                                <span> — </span>
                                <div class="RouteInfoMainContentStation">Florence Peretola Station</div>
                            </div>
                        </div>
                        <div class="RouteInfoTime">
                            <div>2h15m • 0 transfers</div>
                        </div>
                    </div>
                    <div class="RouteInfoDropDown">
                        <i class="fa-solid fa-angle-down"></i>
                        
                    </div>
                </div>
                }
                
            </div>
           <div class="Busket">
               <div id="BusketItems" class="BusketItems">
                    <div class="BusketItem">
                        <div class="BusketItemDescription">Ticket(1 passanger)</div>
                        <div class="BusketItemPrice">$12.40</div>
                    </div>
                    <div class="BusketItem">
                        <div class="BusketItemDescription">Baggade upgrade</div>
                        <div class="BusketItemPrice">$9.60</div>
                    </div>
               </div>
               
               <div id="BusketTotal" class="BusketTotal">
                   <div class="BusketTotalDescription">Total</div>
                   <div class="BusketTotalPrice">$22</div>
               </div>
           </div>        
        </div>

        
    </div>
   <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js"></script>
    <script src="~/js/checkControl.js"></script>
   <script src="~/js/tripOrder.js"></script>
  
