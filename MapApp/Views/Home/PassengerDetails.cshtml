@{
    ViewData["Title"] = "Passenger details";
}

<link href="~/css/header.css" rel="stylesheet">
<link href="~/css/tripOrder.css" rel="stylesheet">
<link href="~/css/passengerDetails.css" rel="stylesheet">
<script src="https://kit.fontawesome.com/e3cd8d35d3.js" crossorigin="anonymous"></script>

<div class="UndeHeader">

        <div class="UnderHeaderContent">

            <div  class="UnderHeaderContentCurrent"> Additional baggage</div>
            <div><img src="~/images/RightArrow.png" alt="" class="UnderHeaderContentArrows"></div>
            <div  class="UnderHeaderContentCurrent">Passenger details</div>
            <div><img src="~/images/RightArrow.png" alt="" class="UnderHeaderContentArrows"></div>
            <div>Review and pay</div> 
        </div> 
    </div> 
    <div class="MainContent">
        <div class="Info">
            <div class="ExternalLogin">
               
                <div class="ExternalLoginBlock">
                    <div class="ExternalLoginBlockDescription">
                        <div class="ExternalLoginBlockDescriptionHeader">Quick sign in</div>
                        <div>Skip filling in all your details by signing up through Google</div>
                    </div>
                    
                    <div class="ExternalLoginBlockImg">
                        <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQUZjisBwO2XBatEej-VkCeJzpWYx_qWJZVDHho0uGDWxiHdjwr4_-48Avi9clpIUZqwh8&usqp=CAU" alt="" height="30">
                    </div>
                </div>
                <div class="ExternalLoginButtons">
                    <div class="ExternalLoginButton">
                        <div class="ExternalLoginButtonLeft" >
                            <img src="https://freesvg.org/img/1534129544.png" height="20">
                        </div>
                        
                        <div class="">Sing up with Google</div> 
                        <div class="ExternalLoginButtonRight"></div>
                    </div> 
                    
                </div>
            </div>
            <div class="Content">
                <div class="ContentHeader">
                    <div class="ContentHeaderText">Main passanger</div>
                    <div class="ContentHeaderPrefix">Adult</div>
                </div>
                <div class="PassengerDetails">
                    <form class="ContantMainPart" action="">
                        
                        <div class="ContantMainPartItem">
                            <div class="ContantMainPartItemFull"> 
                                <label for="">Email address</label>
                                <input type="text">
                            </div>
                        
                        </div>
                        <div class="ContantMainPartItem">
                            <div class="ContantMainPartItemCol">
                                <div class="ContantMainPartItemRow">
                                    <label for="">First name</label>
                                    <input type="text">
                                </div>
                            </div>
                            <div class="ContantMainPartItemCol ColumnMargin">
                                <div class="ContantMainPartItemRow">
                                    <label for="">Last name</label>
                                    <input type="text">
                                </div>
                            </div>
                        </div>
                        <div class="ContantMainPartItem">
                            <div class="ContantMainPartItemCol">
                                <div class="ContantMainPartItemRow">
                                    <label for="">Phone</label>
                                    <input type="text">
                                </div>
                            </div>
                            <div class="ContantMainPartItemCol ColumnMargin">
                                <div class="ContantMainPartItemRow">
                                    <label for="">Date of birth</label>
                                    <div class="ContantMainDate">
                                        <input class="Month"  type="text" placeholder="MM"><span>/</span>
                                        <input class="Day"  type="text" placeholder="DD"><span>/</span>
                                        <input class="Year"  type="text" placeholder="YYYY">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>    
                </div>     
            </div>
            <div class="ToNextStage">
                <button class="ToNextStageButton">Review journey details</button>
            </div>
        </div>
       
        <div class="CheckSum">
            <div class="RoutesInfo">
                <div class="RouteOutbandInfo">
                    <div class="RouteInfoContent">
                        <div class="RouteInfoHeader">
                            <i class="fa-solid fa-circle-check"></i>
                            <div>Outbount</div>
                        </div>
                        <div class="RouteInfoMain">
                            <div class="RouteInfoMainDate">Thu, May 19 10:00 AM – 1:15 PM</div>
                            <div class="RouteInfoMainContent">
                                <div class="RouteInfoMainContentStation">London Gatwick Station</div>
                                <span> — </span>
                                <div class="RouteInfoMainContentStation">Florence Peretola Station</div>
                            </div>
                        </div>
                        <div class="RouteInfoTime">
                            <div>2h15m • 0 transfers</div>
                        </div>
                    </div>
                    <div class="RouteInfoDropDown">
                        <i class="fa-solid fa-angle-down"></i>
                        
                    </div>
                </div>
    
                <div class="RouteReturnInfo">
                    <div class="RouteInfoContent">
                        <div class="RouteInfoHeader">
                            <i class="fa-solid fa-circle-check"></i>
                            <div>Return</div>
                        </div>
                        <div class="RouteInfoMain">
                            <div class="RouteInfoMainDate">Thu, May 19 10:00 AM – 1:15 PM</div>
                            <div class="RouteInfoMainContent">
                                <div class="RouteInfoMainContentStation">London Gatwick Station</div>
                                <span> — </span>
                                <div class="RouteInfoMainContentStation">Florence Peretola Station</div>
                            </div>
                        </div>
                        <div class="RouteInfoTime">
                            <div>2h15m • 0 transfers</div>
                        </div>
                    </div>
                    <div class="RouteInfoDropDown">
                        <i class="fa-solid fa-angle-down"></i>
                        
                    </div>
                </div>
            </div>
           <div class="Busket">
               <div class="BusketItems">
                    <div class="BusketItem">
                        <div class="BusketItemDescription">Ticket(1 passanger)</div>
                        <div class="BusketItemPrice">$12.40</div>
                    </div>
                    <div class="BusketItem">
                        <div class="BusketItemDescription">Baggade upgrade</div>
                        <div class="BusketItemPrice">$9.60</div>
                    </div>
               </div>
               
               <div class="BusketTotal">
                   <div class="BusketTotalDescription">Total</div>
                   <div class="BusketTotalPrice">$22</div>
               </div>
           </div>        
        </div>

        
    </div>
